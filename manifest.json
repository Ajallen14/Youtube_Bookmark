{
    "name": "Youtube Bookmark",
    "version": "1.0.0",
    "description": "It saves timestamps in Youtube videos",
    "manifest_version": 3,
    "icons" : {
        "128" : "assets/Logo.png"
    },
    "permissions": [
        "storage", 
        "tabs"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
],

    "background": {
        "service_worker": "Background.js"
    },

    "content_scripts": [
        {
            "matches": [
                "https://*.youtube.com/*"
            ],
            "js": [
                "Content.js"
            ]
        }
    ],

    "web_accessible_resources": [
        {
            "resources": [
                "assets/bookmark.png",
                "assets/play.png",
                "assets/delete.png"
            ],
            "matches": [
                "https://*.youtube.com/*"
            ]
        }
    ],

    "action": {
        "default_icon": {
            "16": "assets/ext-icon.png",
            "24": "assets/ext-icon.png",
            "32": "assets/ext-icon.png"
        },
        "default_title": "Youtube Bookmark",
        "default_popup": "Popup.html"
    }
}